<Window x:Class="OpenFileDialogSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenFileDialogSample"
        mc:Ignorable="d"
        Title="OpenFileDialogSample" Height="300" Width="600">
  <DockPanel>
    <DockPanel Margin="20" DockPanel.Dock="Left" Width="250">
    <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
      <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>
    </WrapPanel>
    <TextBox Name="txtEditor" />
  </DockPanel>
    <DockPanel Margin="20" DockPanel.Dock="Right" Width="250">
    <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
      <Button Name="btnOpenFiles" Click="btnOpenFiles_Click">Open files</Button>
    </WrapPanel>
    <ListBox Name="lbFiles" />
  </DockPanel>
  </DockPanel>
</Window>
